{
  "name": "sentry-docs",
  "description": "Learn how to use Sentry, configure Sentry clients, and contribute to the open source project on GitHub",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getsentry/sentry-docs.git"
  },
  "author": "getsentry",
  "license": "BSL-1.1",
  "bugs": {
    "url": "https://github.com/getsentry/sentry-docs/issues"
  },
  "homepage": "https://docs.sentry.io/",
  "scripts": {
    "dev": "next dev",
    "postinstall": "patch-package",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@github-docs/data-directory": "^1.2.0",
    "dlv": "^1.1.3",
    "dset": "^2.0.1",
    "fs-extra": "^9.0.1",
    "gray-matter": "^4.0.2",
    "js-yaml": "^3.14.0",
    "next": "^10.0.3",
    "next-mdx-remote": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "resolutions": {
    "@mdx-js/mdx": "2.0.0-next.8"
  },
  "devDependencies": {
    "@mdx-js/mdx": "2.0.0-next.8",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/node": "12",
    "@types/react": "^16.9.27",
    "@types/unist": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.2.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "patch-package": "^6.2.2",
    "prettier": "^2.0.2",
    "remark-mdx": "^1.6.21",
    "remark-mdxjs": "^2.0.0-next.0",
    "remark-parse": "^9.0.0",
    "remark-stringify": "^8.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^3.8.3",
    "unified": "^9.2.0",
    "unist-util-visit": "^2.0.3"
  },
  "volta": {
    "node": "12.18.3",
    "yarn": "1.22.4"
  }
}
